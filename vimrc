"nice stuff
set clipboard=unnamed
set mouse=a
set noswapfile 
set number
nnoremap ; :
nnoremap Y y$

"better escaping
inoremap jk <ESC>
inoremap <X1Mouse> <ESC>

" blackhole
noremap x "_x

"nice wraps
set wrap
set linebreak
set nolist
nnoremap j gj
nnoremap k gk

"nice colors 
set background=light
colorscheme lucius

"nice gui
set guifont=Cascadia\ Mono:h14
set guioptions-=T
